---
import type { ISkill } from '../models/skill';

interface Props {
  skills: {
    title: string;
    values: string[];
  };
}
const { skills } = Astro.props;
---

<div class="flex flex-col gap-y-2 md:gap-x-5 md:gap-y-0 lg:flex-row">
  {!!skills.title && <h2 class="w-2/5 font-medium">{skills.title}</h2>}

  <div class:list={[{ 'flex flex-row flex-wrap gap-1': true, 'w-3/4 gap-x-4 gap-y-2': !!skills.title }]}>
    {
      skills.values?.map((skill: string) => (
        <div class="bg-accent-200/30 border-border hover:bg-input inline-flex cursor-default items-center gap-x-1 rounded-xl border px-2 py-1 text-sm transition-all">
          {skill}
        </div>
      ))
    }
  </div>
</div>
