---
const { title, subtitle, date } = Astro.props;
---

<div class="bg-background-secondary relative flex w-full flex-col gap-x-7 gap-y-1 rounded-2xl p-5">
  <div class="flex flex-col gap-y-1.5">
    <div class="flex flex-col gap-y-0.5"></div>
    <h1 class="text-lg font-medium">{title}</h1>
    <h2 class="text-muted-foreground">{subtitle}</h2>
    <h3 class="text-accent-300 text-sm">{date}</h3>
    <slot />
  </div>
</div>
