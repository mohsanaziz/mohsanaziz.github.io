---
const { title, info } = Astro.props;
---

<div class="flex flex-row items-center gap-x-2">
  <div class="bg-background-tertiary flex cursor-default items-center justify-center rounded-lg p-2 shadow-sm">
    <slot />
  </div>
  <div class="flex flex-col">
    <span class="text-accent-200 text-xs uppercase">{title}</span>
    <span class="font-bold">{info}</span>
  </div>
</div>
